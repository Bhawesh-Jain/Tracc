<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container_full"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ui.home.HomeActivity">


    <RelativeLayout
        android:id="@+id/container_withNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/home_bottom_action_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_bg_actionbar">

        <ImageView
            android:id="@+id/bottom_nav_bar_task_list_ic"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_25sdp"
            android:contentDescription="@string/time_outline_icon"
            android:src="@drawable/ic_time_outline" />

        <ImageView
            android:id="@+id/bottom_nav_bar_report_ic"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_25sdp"
            android:contentDescription="@string/time_outline_icon"
            android:src="@drawable/ic_pie_chart" />

        <ImageView
            android:id="@+id/bottom_nav_bar_add_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/_15sdp"
            android:src="@drawable/ic_add" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_indicator" />

    </RelativeLayout>

</RelativeLayout>